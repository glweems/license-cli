{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "build/",
    "esModuleInterop": true,
    "outDir": "./build/",
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": false,
    "target": "es5",
    "types": ["node"],
    "rootDir": "./src/"
  },
  "include": ["src/", "templates/**/*.tmpl"],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/dist",
    "**/*.md",
    "**/rollup.config.js"
  ]
}
